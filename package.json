{
  "name": "kibi-the-pokemon-showdown-tooltip-helper",
  "description": "A small chrome extension for displaying type weaknesses and resistances in Pokemon Showdown.",
  "version": "0.0.8",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weIlThought/kibi-the-pokemon-showdown-tooltip-helper.git"
  },
  "author": "Colton Blake",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weIlThought/kibi-the-pokemon-showdown-tooltip-helper/issues"
  },
  "homepage": "https://github.com/weIlThought/kibi-the-pokemon-showdown-tooltip-helper#readme",
  "scripts": {
    "start": "webpack --watch --config webpack.config.js --mode=development",
    "build": "webpack --config webpack.config.js --mode=production",
    "test": "jest",
    "release": "standard-version",
    "format": "prettier -w .",
    "lint": "prettier -c .",
    "prepare": "husky",
    "husky:fix": "shx chmod +x .husky/pre-commit",
    "postinstall": "npm run husky:fix"
  },
  "dependencies": {
    "nano-jsx": "^0.2.0",
    "pokedex-promise-v2": "^4.1.1",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@types/jest": "^30.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "shx": "^0.4.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.91.0",
    "webpack-cli": "^6.0.1"
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run format >/dev/null"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": "prettier --write"
  }
}
